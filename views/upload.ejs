<html>
    <head>
        <title>Book Upload</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    </head>
    <body>
        <div class="container">
            <div class="col-sm-6 col-sm-offset-3">
                <h1><span class="fa fa-upload"></span>Upload Book Details</h1>
                <form action="/success" method="POST">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="hidden" name="title" class="form-control" value='<%- books_list[index].title %>'>
                        <p><%= books_list[index].title %></p>
                    </div>
                    <div class="form-group">
                        <label>Author</label>
                        <input type="hidden" name="author" class="form-control" value='<%- books_list[index].authors %>'>
                        <p><%= books_list[index].authors %></p>
                    </div>
                    <div class="form-group">
                        </span><label>Description</label></span>
                        <input type="text" name="desc" class="form-control" required>
                    </div>
                    <button class="btn btn-warning btn-lg" type="submit">Submit</button>
                    <button class="btn btn-default btn-primary" type="reset">Reset</button>
                </form>
            </div>
        </div>
    </body>
</html>